<?xml version="1.0" encoding="UTF-8"?>
		<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yw.home.board.notice.NoticeDAO">

	<!-- 글목록 -->
	<select id="getList" resultType="NoticeDTO">
		SELECT NUM, TITLE, WRITER, REGDATE, HIT FROM NOTICE ORDER BY NUM DESC
	</select>

	<!-- 상세보기 -->
	<select id="getDetail" parameterType="BoardDTO" resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM = #{num}
	</select>

	<!-- 글쓰기 -->
	<insert id="setAdd" parameterType="BoardDTO">
		INSERT INTO NOTICE VALUES(BOARD_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, sysdate, 0)
	</insert>

	<!-- 글 수정 -->
	<update id="setUpdate" parameterType="BoardDTO">
		UPDATE NOTICE SET TITLE = #{title}, CONTENTS = #{contents} WHERE NUM = #{num}
	</update>

	<!-- 글 삭제 -->
	<delete id="setDelete" parameterType="BoardDTO">
		DELETE NOTICE WHERE NUM = #{num}
	</delete>

</mapper>